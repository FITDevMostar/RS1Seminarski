@using RS1.Models
@model IEnumerable<AppUser>


<div class="panel panel-primary">

    <div class="panel-heading"> User Accounts </div>

    <table class="table table-striped">

        <tr><th>ID</th> <th>Name</th> <th>Email</th> </tr>

        @if(Model.Count() == 0)
        {
            <tr>
                <td colspan="3"> No User Accounts </td>
            </tr>
        }else
        {
            foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                </tr>
            }
        }

    </table>

</div>

    @Html.ActionLink("Create", "Register", "Account",null, new { @class = "btn btn-primary"})
