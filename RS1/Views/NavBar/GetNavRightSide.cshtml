@model RS1.Models.AppUser

@if(Model == null)
{

    <li> @Html.ActionLink("Login", "Login", "Account", null, new { @class = "" }) </li>

    <li> @Html.ActionLink("Register", "Register", "Account", null, new { @class = "" }) </li>
}else
{

    <li class="dropdown">


        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Model.UserName <span class="caret"></span></a>
        
        <ul class="dropdown-menu">
            <li> @Html.ActionLink("Profile", "Profile", "Account", null, null) </li>
            <li> @Html.ActionLink("Logout", "Logout", "Account", null, null) </li>
            <li> @Html.ActionLink("Change Password", "ChangePassword", "Account", null, null) </li>
        </ul>

    </li>

}
