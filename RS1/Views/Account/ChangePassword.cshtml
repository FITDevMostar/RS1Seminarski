@model RS1.ViewModel.ChangePasswordModel


<div class="col-lg-3"></div>

<div class="col-lg-4">

    <h3>Change Password @Model.Username</h3>

    @using (Html.BeginForm())
    {

        if (Model.isLoged == false)
        {

            <div class="form-group">

               <label>Enter username</label>
               @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })

            </div>
        }else
        {
            <input type="hidden" name="Username" value="@Model.Username" />
        }

            <div class="form-group">

                <label>Enter old password</label>
                @Html.PasswordFor(x => x.OldPassword, new { @class = "form-control" })

            </div>


            <div class="form-group">

                <label>Enter new password</label>
                @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control" })

            </div>
        
            <button type="submit" class="btn btn-default"> Change </button>
    }

</div>

<div class="col-lg-3"></div>
